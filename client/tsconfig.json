{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./client", 
    "paths": {
      "@app/*": [ "src/app/*" ],
      "@assets/*": [ "src/assets/*" ],
      "@core/*": [ "src/app/core/*" ],
      "@env": [ "src/environments/environments" ],
      "@shared/*": [ "src/app/shared/*" ]
    }
  }
}
